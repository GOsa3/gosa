{
  "name"    : "cute",

  "include" :
  [
    {
      "path" : "${QOOXDOO_PATH}/tool/data/config/application.json"
    }
  ],

  "export" :
  [
    "api",
    "api-data",
    "build",
    "build-final",
    "clean",
    "distclean",
    "fix",
    "info",
    "inspector",
    "lint",
    "migration",
    "pretty",
    "profiling",
    "source",
    "source-all",
    "source-destruct",
    "source-hybrid",    
    "simulation-build",
    "simulation-run",
    "test",
    "test-source",
    "translation"
  ],
  
  "default-job" : "source-hybrid",

  "let" :
  {
    "APPLICATION"  : "cute",
    "QOOXDOO_PATH" : "../qooxdoo",
    "QXTHEME"      : "cute.theme.Theme",
    "API_EXCLUDE"  : ["qx.test.*", "${APPLICATION}.theme.*", "${APPLICATION}.test.*", "${APPLICATION}.simulation.*"],
    "LOCALES"      : [ "en", "de" ],
    "CACHE"        : "${ROOT}/cache/qx${QOOXDOO_VERSION}",
    "ROOT"         : "."
  },

  // You only need to edit the remainder of this file, if you want to customize
  // specific jobs, or add own job definitions.

  "jobs" :
  {

    "source-destruct" :
    {
      "variants" : { "qx.aspects" : [ "on" ], "qx.debug" : [ "on" ] },

      "shell" : {
        "command" : "./customize"
      },

      "settings" :
      {
        "qx.disposerDebugLevel" : "2",
        "qx.widgetDebugId" : true
      }
    },

    "build":
    {
      "include": ["cute.ui.widgets.*"],
      "add-script" :
      [
        {
          "uri" : "resource/cute/js/xml.js"
        }
      ],
      "copy-files" :
      {
        "files"     : [ "resource/cute/js/xml.js" ],
        "source" : "source",
        "target"  : "build"
      },

      "variants" : 
      { 
        "qx.dynlocale" : ["on"] 
      },

      "shell" : {
	"command" : "./customize"
      }
    },

    "build-final" :
    {
      "shell" : {
        "command" : "./customize build-final"
      },

      "variants" : {
        "qx.debug" : [ "off" ],
        "qx.client" : [ "gecko", "mshtml", "webkit", "opera" ]
      },

      "compile-options" :
      {
        "paths"  :
        {
          "file" : "${BUILD_PATH}/script/${APPLICATION}-{qx.client}.js"
        }
      },

      "compile" : { "type" : "build" }
    },

    "source":
    {
      "include": ["cute.ui.widgets.*"],

      "add-script" :
      [
        {
          "uri" : "resource/cute/js/xml.js"
        }
      ],

      "variants" : 
      { 
        "qx.dynlocale" : ["on"] 
      },

      "shell" : {
	"command" : "./customize"
      }

    },

    // Uncomment the following entry to add a contrib or library to your
    // project; make sure to adapt the path to the Manifest.json; if you are
    // using a contrib: library, it will be downloaded into the path specified
    // by the 'cache/downloads' config key
    "libraries" : 
    {
      "library" :
      [
        {
          "manifest" : "contrib://UploadMgr/trunk/Manifest.json"
        }
      ]
    }

    // If you want to tweak a job setting, see the following sample where
    // the "format" feature of the "build-script" job is overridden.
    // To see a list of available jobs, invoke 'generate.py x'.
	/*
    ,"build-script" :
    {
      "compile-options" : 
      {
        "code" :
        {
          "format" : false
        }
      }
    }
    */
  }
}
