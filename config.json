{
  "name"    : "cute",

  "include" :
  [
    {
      "path" : "${QOOXDOO_PATH}/tool/data/config/application.json"
    }
  ],

  "export" :
  [
    "api",
    "api-data",
    "build",
    "clean",
    "distclean",
    "fix",
    "info",
    "inspector",
    "lint",
    "migration",
    "pretty",
    "profiling",
    "source",
    "source-all",
    "source-destruct",
    "source-hybrid",    
    "simulation-build",
    "simulation-run",
    "test",
    "test-source",
    "translation"
  ],
  
  "default-job" : "source-hybrid",

  "let" :
  {
    "APPLICATION"  : "cute",
    "QOOXDOO_PATH" : "../qooxdoo",
    "QXTHEME"      : "cute.theme.Theme",
    "API_EXCLUDE"  : ["qx.test.*", "${APPLICATION}.theme.*", "${APPLICATION}.test.*", "${APPLICATION}.simulation.*"],
    "LOCALES"      : [ "en", "de" ],
    "CACHE"        : "${ROOT}/cache/qx${QOOXDOO_VERSION}",
    "ROOT"         : "."
  },

  // You only need to edit the remainder of this file, if you want to customize
  // specific jobs, or add own job definitions.

  "jobs" :
  {

    "source-destruct" :
    {
      "variants" : { "qx.aspects" : [ "on" ], "qx.debug" : [ "on" ] },

      "shell" : {
        "command" : "./customize"
      },

      "settings" :
      {
        "qx.disposerDebugLevel" : "2",
        "qx.widgetDebugId" : true
      }
    },

    "build-script":
    {
      "include": ["cute.ui.widgets.*", "cute.ui.dialogs.*"],

      "variants" : 
      { 
        "qx.dynlocale" : ["on"]
      },
      "add-script" :
      [
        {
          "uri" : "resource/cute/js/throbber.js"
        },
        {
          "uri" : "resource/cute/js/utils.js"
        }
      ],
      "copy-files" :
      {
"files"     : [ "resource/cute/js/throbber.js", "resource/cute/js/utils.js" ],
        "source" : "source",
        "target"  : "build"
      },

      "environment" : 
      {
        "engine.name" : [ "gecko", "mshtml", "webkit", "opera" ]
      },

      "shell" : {
        "command" : "./customize build"
      },

      "compile-options" :
      {
        "paths"  :
        {
          "file" : "${BUILD_PATH}/script/${APPLICATION}-{engine.name}.js"
        }
      }
    },

    "source-script":
    {
      "include": ["cute.ui.widgets.*", "cute.ui.dialogs.*"],

      "variants" : 
      { 
        "qx.dynlocale" : ["on"] 
      },

      "shell" : {
        "command" : "./customize"
      },
      "add-script" :
      [
        {
          "uri" : "resource/cute/js/throbber.js"
        },
        {
          "uri" : "resource/cute/js/utils.js"
        }
      ]
    },

    // Uncomment the following entry to add a contrib or library to your
    // project; make sure to adapt the path to the Manifest.json; if you are
    // using a contrib: library, it will be downloaded into the path specified
    // by the 'cache/downloads' config key
    "libraries" : 
    {
      "library" :
      [
        {
          "manifest" : "contrib://UploadMgr/trunk/Manifest.json"
        }
      ]
    }
  }
}
