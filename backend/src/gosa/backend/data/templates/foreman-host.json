{
  "type": "widget",
  "class": "qx.ui.container.Composite",
  "layout": "qx.ui.layout.VBox",
  "addOptions": {
    "flex": 1
  },
  "extensions": {
    "resources": {
      "favicon": "@Ligature/tag"
    },
    "tabConfig": {
      "title": "tr('Deployment')",
      "icon": "favicon"
    },
    "actions": [
      {
        "name": "actionPowerHostStart",
        "target": "powerOn()",
        "text": "tr('Power on host')",
        "condition": "supportsPower(uuid,compute_resource_id)"
      },
      {
        "name": "actionPowerHostStop",
        "target": "powerOff()",
        "text": "tr('Power off host')",
        "condition": "supportsPower(uuid,compute_resource_id)"
      },
      {
        "name": "actionPowerHostReboot",
        "target": "reboot()",
        "text": "tr('Reboot host')",
        "condition": "supportsPower(uuid,compute_resource_id)"
      },
      {
        "name": "actionPowerHostReset",
        "target": "reset()",
        "text": "tr('Reset host')",
        "condition": "supportsPower(uuid,compute_resource_id)"
      },
      {
        "name": "doPuppetRun",
        "target": "runPuppet()",
        "text": "tr('Run puppet')",
        "condition": "getForemanSetting('puppetrun')"
      }
    ]
  },
  "children": [
    {
      "class": "gosa.ui.widgets.GroupBox",
      "layout": "qx.ui.layout.Grid",
      "properties": {
        "legend": "tr('Foreman host settings')"
      },
      "layoutConfig": {
        "spacingX": "CONST_SPACING_X",
        "spacingY": "CONST_SPACING_Y"
      },
      "extensions": {
        "layoutOptions": {
          "columnFlex": {
            "column": [1, 3],
            "flex": 1
          }
        }
      },
      "children": [
        {
          "properties": {
            "text": "tr('Status')"
          },
          "buddyModelPath": "status",
          "class": "gosa.ui.widgets.QLabelWidget",
          "addOptions": {
            "column": 0,
            "row": 0
          }
        },
        {
          "properties": {
            "tabIndex": 1,
            "readOnly": true
          },
          "modelPath": "status",
          "class": "gosa.ui.widgets.QLineEditWidget",
          "addOptions": {
            "column": 1,
            "row": 0
          }
        },
        {
          "properties": {
            "text": "tr('Hostgroup membership')"
          },
          "buddyModelPath": "groupMembership",
          "class": "gosa.ui.widgets.QLabelWidget",
          "addOptions": {
            "column": 2,
            "row": 0
          }
        },
        {
          "class": "gosa.ui.widgets.QTableWidgetWidget",
          "modelPath": "groupMembership",
          "addOptions": {
            "column": 3,
            "row": 0
          },
          "properties": {
            "multivalue": false,
            "tabIndex": 2
          },
          "extensions": {
            "guiProperties": {
              "editTitle": "tr('Change hostgroup membership')",
              "columns": {
                "cn": "tr('Hostgroup name')"
              }
            }
          }
        },
        {
          "properties": {
            "text": "tr('Build host')"
          },
          "buddyModelPath": "build",
          "class": "gosa.ui.widgets.QLabelWidget",
          "addOptions": {
            "column": 0,
            "row": 1
          }
        },
        {
          "class": "gosa.ui.widgets.QCheckBoxWidget",
          "modelPath": "build",
          "addOptions": {
            "column": 1,
            "row": 1
          },
          "properties": {
            "tabIndex": 3
          }
        },
        {
          "properties": {
            "text": "tr('Compute resource')"
          },
          "buddyModelPath": "compute_resource_id",
          "class": "gosa.ui.widgets.QLabelWidget",
          "addOptions": {
            "column": 2,
            "row": 1
          }
        },
        {
          "class": "gosa.ui.widgets.QComboBoxWidget",
          "modelPath": "compute_resource_id",
          "addOptions": {
            "column": 3,
            "row": 1
          },
          "properties": {
            "tabIndex": 4,
            "sortBy": "value"
          }
        }
      ]
    }
  ]
}
