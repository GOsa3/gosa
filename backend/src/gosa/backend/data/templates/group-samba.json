{
    "type": "widget",
    "class": "qx.ui.container.Composite",
    "layout": "qx.ui.layout.VBox",
    "layoutConfig": {
        "spacing": "CONST_SPACING_Y"
    },
    "extensions": {
        "resources": {
            "favicon": "images/user-samba.png"
        },
        "tabConfig": {
            "title": "tr('Samba')",
            "icon": "favicon"
        }
    },
    "children": [{
        "class": "gosa.ui.widgets.GroupBox",
        "layout": "qx.ui.layout.Grid",
        "layoutConfig": {
            "spacingX": "CONST_SPACING_X",
            "spacingY": "CONST_SPACING_Y"
        },
        "properties": {
            "legend": "tr('Generic')"
        },
        "extensions": {
            "layoutOptions": {
                "columnFlex": {
                    "column": 1,
                    "flex": 1
                }
            }
        },
        "children": [{
            "class": "gosa.ui.widgets.QLabelWidget",
            "buddyModelPath": "sambaSID",
            "addOptions": {
                "row": 0,
                "column": 0
            },
            "properties": {
                "text": "tr('SID')"
            }
        }, {
            "class": "gosa.ui.widgets.QLineEditWidget",
            "modelPath": "sambaSID",
            "addOptions": {
                "row": 0,
                "column": 1
            },
            "properties": {
                "tabIndex": 1,
                "readOnly": true
            }
        }, {
            "class": "gosa.ui.widgets.QLabelWidget",
            "buddyModelPath": "sambaDomain",
            "addOptions": {
                "row": 1,
                "column": 0
            },
            "properties": {
                "text": "tr('Domain')"
            }
        }, {
            "class": "gosa.ui.widgets.QComboBoxWidget",
            "modelPath": "sambaDomainName",
            "addOptions": {
                "row": 1,
                "column": 1
            },
            "properties": {
                "tabIndex": 2
            }
        }, {
            "class": "gosa.ui.widgets.QLabelWidget",
            "buddyModelPath": "sambaGroupType",
            "addOptions": {
                "row": 2,
                "column": 0
            },
            "properties": {
                "text": "tr('Group type')"
            }
        }, {
            "class": "gosa.ui.widgets.QComboBoxWidget",
            "modelPath": "sambaGroupType",
            "addOptions": {
                "row": 2,
                "column": 1
            },
            "properties": {
                "tabIndex": 3
            }
        }, {
            "class": "gosa.ui.widgets.QLabelWidget",
            "buddyModelPath": "displayName",
            "addOptions": {
                "row": 3,
                "column": 0
            },
            "properties": {
                "text": "tr('Display name')"
            }
        }, {
            "class": "gosa.ui.widgets.QLineEditWidget",
            "modelPath": "displayName",
            "addOptions": {
                "row": 3,
                "column": 1
            },
            "properties": {
                "tabIndex": 4
            }
        }]
    }, {
        "class": "gosa.ui.widgets.GroupBox",
        "layout": "qx.ui.layout.Canvas",
        "properties": {
            "legend": "tr('Nested groups')"
        },
        "children": [{
            "class": "gosa.ui.widgets.QTableWidgetWidget",
            "modelPath": "sambaSIDList",
            "addOptions": {
                "edge": 0
            },
            "properties": {
                "multivalue": true
            },
            "extensions": {
                "guiProperties": {
                    "editTitle": "tr('Edit nested groups')",
                    "columns": {
                        "cn": "tr('Name')",
                        "description": "tr('Description')",
                        "sambaSID": "tr('SID')"
                    }
                }
            }
        }]
    }]
}
