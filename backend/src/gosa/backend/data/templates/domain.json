{
    "type": "widget",
    "class": "qx.ui.container.Composite",
    "layout": "qx.ui.layout.VBox",
    "addOptions": {
        "flex": 1
    },
    "layoutConfig": {
        "spacing": 5
    },
    "extensions": {
        "resources": {
            "favicon": "@Ligature/link"
        },
        "tabConfig": {
            "title": "tr('Domain')",
            "icon": "favicon"
        }
    },
    "children": [{
        "class": "gosa.ui.widgets.GroupBox",
        "layout": "qx.ui.layout.Flow",
        "properties": {
            "legend": "tr('Organizational information')"
