{
    "type": "widget",
    "class": "qx.ui.container.Composite",
    "layout": "qx.ui.layout.VBox",
    "layoutConfig": {
      "spacing": "CONST_SPACING_Y"
    },
    "extensions": {
        "resources": {
            "favicon": "images/group-posix.png"
        },
        "tabConfig": {
            "title": "tr('POSIX')",
            "icon": "favicon"
        }
    },
    "properties": {
        "categoryTitle": "tr('PosixGroup')"
    },
    "children": [{
        "class": "gosa.ui.widgets.GroupBox",
        "layout": "qx.ui.layout.Grid",
        "layoutConfig": {
            "spacingX": "CONST_SPACING_X",
            "spacingY": "CONST_SPACING_Y"
        },
        "properties": {
            "legend": "tr('Generic')"
        },
        "extensions": {
            "layoutOptions": {
                "columnFlex": {
                    "column": 1,
                    "flex": 1
                }
            }
        },
        "children": [{
            "class": "gosa.ui.widgets.QLabelWidget",
            "buddyModelPath": "cn",
            "addOptions": {
                "row": 0,
                "column": 0
            },
            "properties": {
                "text": "tr('Group name')"
            }
        }, {
            "class": "gosa.ui.widgets.QLineEditWidget",
            "modelPath": "cn",
            "addOptions": {
                "row": 0,
                "column": 1
            },
            "properties": {
                "tabIndex": 1
            }
        }, {
            "class": "gosa.ui.widgets.QLabelWidget",
            "buddyModelPath": "description",
            "addOptions": {
                "row": 1,
                "column": 0
            },
            "properties": {
                "text": "tr('Description')"
            }
        }, {
            "class": "gosa.ui.widgets.QLineEditWidget",
            "modelPath": "description",
            "addOptions": {
                "row": 1,
                "column": 1
            },
            "properties": {
                "tabIndex": 2
            }
        }, {
            "class": "gosa.ui.widgets.QCheckBoxWidget",
            "modelPath": "autoGid",
            "addOptions": {
                "row": 3,
                "column": 0,
                "colSpan": 2
            },
            "properties": {
                "label": "tr('Automatically assign group ID')"
            }
        }, {
            "class": "gosa.ui.widgets.QLabelWidget",
            "buddyModelPath": "gidNumber",
            "addOptions": {
                "row": 4,
                "column": 0
            },
            "properties": {
                "text": "tr('Group ID')"
            }
        }, {
            "class": "gosa.ui.widgets.QSpinBoxWidget",
            "modelPath": "gidNumber",
            "addOptions": {
                "row": 4,
                "column": 1
            },
            "properties": {
                "tabIndex": 3
            }
        }]
    }, {
        "class": "gosa.ui.widgets.GroupBox",
        "layout": "qx.ui.layout.Canvas",
        "properties": {
            "legend": "tr('Members')"
        },
        "children": [{
            "class": "gosa.ui.widgets.QTableWidgetWidget",
            "modelPath": "memberUid",
            "addOptions": {
                "edge": 0
            },
            "properties": {
                "multivalue": true
            },
            "extensions": {
                "guiProperties": {
                    "editTitle": "tr('Edit members')",
                    "columns": {
                        "sn": "tr('Name')",
                        "givenName": "tr('Given name')",
                        "uid": "tr('Login ID')"
                    }
                }
            }
        }]
    }]
}
