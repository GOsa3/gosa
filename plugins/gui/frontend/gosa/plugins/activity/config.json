{
  "name"    : "activity",

  "include" :
  [
    {
      "path" : "${QOOXDOO_PATH}/tool/data/config/application.json"
    }
  ],

  "export" :
  [
    "build",
    "clean",
    "distclean",
    "dependencies",
    "fix",
    "info",
    "translation"
  ],

  "let" :
  {
    "APPLICATION"  : "gosa.plugins.activity",
    "APPLICATION_MAIN_CLASS" : "${APPLICATION}.Main",
    "QOOXDOO_PATH" : "../../../qooxdoo",
    "LOCALES"      : [ "en", "de" ],
    "CACHE"        : "${TMPDIR}/qx${QOOXDOO_VERSION}/cache",
    "ROOT"         : "."
  },

  "config-warnings" : {
    "job-shadowing": [ "common", "build" ]
  },

  "jobs": {
    "common": {
      "=include" : [ "${APPLICATION}.*" ],
      "=exclude" : [ "qx.*" ],
      "lint-check": { "allowed-globals": [ "gosa" ] },
      "environment" : {
        "gosa.plugins.activity.source" : "external"
      }
    },

    "build" :
    {
      "desc"    : "create build version of current application",

      "run" :
      [
        "build-resources",
        "build-script",
        "build-files",
        "build-zip"
      ]
    },

    "build-zip": {

    }
  }
}
